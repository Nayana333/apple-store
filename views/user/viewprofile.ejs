                                            <div class="card-header" style="height: 155px">
                                                
                                                <center><h2 class="mb-0" style="color:#222222a8"> Your Wallet Balance</h2></center><br>

                                                <center>
                                                    <h3 class="mb-0" style="color:#222222a8">
                                                      <% if (user.walletBalance < 0) { %>
                                                        0₹
                                                      <% } else { %>
                                                        <%= user.walletBalance %>₹
                                                      <% } %>
                                                    </h3>
                                                  </center>

                                                  
                                                
                                                
                                            </div>
                                           
                                        </div>

                                        <table class="table">
                                            <thead>
                                              <tr>
                                                <th>Description</th>
                                                <th>Amount</th>
                                                <th>Type</th>
                                              </tr>
                                            </thead>
                                            <tbody>
                                              <% if (transaction && transaction.length > 0) { %>
                                                <% for (let i = 0; i < transaction.length; i++) { %> 
                                                  <tr>
                                                    <td>
                                                      <% const description = transaction[i].description.split(':'); %>
                                                      <% if(description.length > 1) { %>
                                                        <%= description[0]  %>
                                                        </span>
                                                      <% } else { %>
                                                        <%= transaction[i].description %>
                                                      <% } %>
                                                    </td>
                                                    <td><%= transaction[i].amount %></td>
                                                    <td style="color: <%= transaction[i].type === 'credit' ? 'green' : 'red' %>;">
                                                    <%= transaction[i].type %></td>
                                                  </tr>
                                                <% } %>
                                              <% } %>
                                            </tbody>
                                          </table>
                                          

                                          
                                          
                                    </div>


                                    <div class="tab-pane fade" id="coupon-details" role="tabpanel" aria-labelledby="coupon-details-tab" ">
                                        <center><h2 class="mb-0 " style="color:#222222a8">Available Coupons</h2></center><br>
                                        <div class="d-flex justify-content-space-between  mt-4 col-lg-12" style="flex-wrap: wrap;">
                                            <% if (order.length > 0) { %>
                                                <% for (let i = 0; i < coupon.length; i++) { %> 
                                                    <div class="card col-lg-4 col-md-4 mb-4 " style="height: 120px "> 
                                                        <div class="card-header" style="height: 155px">
                                                            <center>
                                                                <h3 class="mb-0 mt-4" style="color: #222222a8; text-align: -webkit-center;"><%= coupon[i].code %></h3>
                                                            </center>
                                                            <% if (coupon[i].expiry) { %>
                                                                <center>
                                                                    <p class="mb-0" style="color: #222222a8; text-align: -webkit-center;">Expire:<%= coupon[i].expiry.toDateString() %></p>
                                                                </center>
                                                            <% } %>
                                                            <p class="mb-0" style="color: #222222a8; text-align: -webkit-center;">Max Amount:<%= coupon[i].maxRedeemableAmt %></p>
                                                        </div>
                                                    </div>
                                                    <br>
                                                <% } %>
                                            <% } %>
                                            
                                    </div>
                                </div>
                                    <div class="tab-pane fade" id="address" role="tabpanel" aria-labelledby="address-tab">
                                        <div class="row">
                                         
                                            <div class="col-lg-6" style="width: 116%">
                                                <div class="card mb-3 mb-lg-0" >
                                                    <div class="card-header"style="height: 170px;">
                                                        <center><h4 class="mb-0"> Address</h4></center>
                                                        <center><p>Add your address Here</p></center>
                                                         <center><a class="btn btn-fill-out submit" href="/addAddress">Add Address</a></center>
                                                            
                                                        </div>

                                                    </div>
                                                    
                                                </div>
                                            
                                        </div><br><br>
                                        
                                        <% if (address.length > 0) {
                                            for (let i = 0; i < address.length; i++) { %> 
                                        <div class="card-header"style="height: 170px;">
                                            <h4></h4>Address<%=i+1 %></h4>
                                            <center><h5 class="mb-0"><%= address[i].name %></h5></center>
                                            <center><p><%= address[i].houseName %></p></center>
                                            <center><p><%= address[i].place %></p></center>
                                            <center><p><%= address[i].street%></p></center>
                                            <center><p><%= address[i].city%></p></center>
                                            <center><p><%= address[i].pin %></p></center>
                                            <center><p><%= address[i].phone %></p></center>
                                            <a style="color: red;position:relative;left:524px"   href="/deleteAddress?addressId=<%=address[i]._id%>">delete</a>

                                               
                                            </div><br>
                                            <% } 
                                        } %>
                                        <br>
                                        <br>
                                    </div>
                                    
                                    <div class="tab-pane fade active show" id="account-detail" role="tabpanel" aria-labelledby="account-detail-tab">
                                        <div class="card">
                                            <div class="card-header">
                                                <h5>Account Details</h5><br>
                                                <div class="d-flex" ms-7>
                                                    <div>
                                                        <% if (user.image) { %>
                                                            <img src="/public/userImages/<%= user.image %>" style="width: 60px;" alt="User Image">
                                                        <% } else { %>
                                                            <img src="/public/defaultAvatar.webp" style="width: 60px;" alt="Default Avatar">
                                                        <% } %>
                                                    </div>
                                                                                                
                                                <div class="ms-5">
                                                    <p><%=user.name%></p>
                                                    <p><%=user.email%></p>
                                                    <p><%=user.mobile%></p>
                                                    
                                                    <p>Refferral Code:<%=user.referralCode%></p>
                                                   
                                                   
                                                </div>
                                                <a class="btn btn-fill-out submit ms-5 " href="/editprofile"style="height: 44px;
                                                width: 137px" style="height: 44px;
    width: 137px">edit profile</a>
                                            </div></center>
                                               
                                                
                                            </div>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

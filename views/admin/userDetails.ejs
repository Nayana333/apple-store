<body>
  <div class="screen-overlay"></div>
  <%- include("../partials/aside")%>
    <main class="main-wrap">
      <%- include("../partials/header2")%>
        <form id="filterForm" method="get" action="" style="display: flex;">
          <select id="filterBy" name="filterBy" class="form-control" style="position: relative; left: 3px; width:170px">
            <option value="blocked" <%=filterBy==="blocked" ? "selected" : "" %>>Blocked</option>
            <option value="unblocked" <%=filterBy==="unblocked" ? "selected" : "" %>>UnBlocked</option>
          </select>
          <input class="btn btn-light rounded btn-sm font-sm" type="submit" value="Filter" name="button"
            style="display: none;">
        </form>
        <table class="table align-middle table-nowrap mb-0 ms-4">
          <thead class="table-light">
            <tr>
              <th class="align-middle" scope="col">Photo</th>
              <th class="align-middle" scope="col">NAME</th>
              <th class="align-middle" scope="col">Email</th>
              <th class="align-middle" scope="col">Mobile</th>
              <th class="align-middle" scope="col">Blocked Status</th>
            </tr>
          </thead>

          <% if (user.length> 0) { %>
            <% for (let i=0; i < user.length; i++) { %>
              <tr>
                <td>
                  <img src="/userImages/<%= user[i].image %>" alt="<%= user[i].image %>" width="50px" height="50px">
                </td>
                <td>
                  <%= user[i].name %>
                </td>
                <td>
                  <%= user[i].email %>
                </td>
                <td>
                  <%= user[i].mobile %>
                </td>
                <td>
                  <% if (user[i].is_blocked) { %>
                    <!-- <a href="/admin/unblockUser?id=<%= user[i]._id.toString() %>"> -->
                    <p class="text-danger ms-4" onclick="unblockUser('<%= user[i]._id.toString() %>')">Block</p>
                    <!-- </a> -->
                    <% } else { %>
                      <!-- <a href="/admin/unblockUser?id=<%= user[i]._id.toString() %>"> -->
                      <p class="text-primary ms-4" onclick="unblockUser('<%= user[i]._id.toString() %>')">UnBlock</p>
                      <!-- </a> -->
                      <% } %>
                </td>
              </tr>
              <% } %>

                <!-- Pagination -->



                <% } %>
        </table>
        <% if (totalPages> 1) { %>
          <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
              <% if (currentPage> 1) { %>
                <li class="page-item">
                  <a class="page-link text-success" href="/admin/userDetails?page=<%= currentPage - 1 %>"
                    aria-label="Previous">Previous</a>
                </li>
                <% } %>

                  <% for (let page=1; page <=totalPages; page++) { %>
                    <li class="page-item <%= page === currentPage ? 'active' : '' %>">
                      <a class="page-link text-success" href="/admin/userDetails?page=<%= page %>">
                        <%= page %>
                      </a>
                    </li>
                    <% } %>

                      <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                          <a class="page-link text-success" href="/admin/userDetails?page=<%= currentPage + 1 %>"
                            aria-label="Next">Next</a>
                        </li>
                        <% } %>
            </ul>
          </nav>
          <% } else { %>
            <table>
              <tr>
                <td colspan="5"></td>
              </tr>
            </table>
            <% } %>


              </div>
              </div> <!-- table-responsive end// -->
              </div>
              </div>




              </section> <!-- content-main end// -->
              <script>
                document.getElementById('filterBy').addEventListener('change', function () {
                  document.getElementById('filterForm').submit();
                });
              </script>
              <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>



              <script>
                function unblockUser(id) {

                  Swal.fire({
                    title: "Are you sure?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes"
                  }).then((result) => {

                    if (result.isConfirmed) {
                      const response = fetch(`/admin/unblockUser?id=${id}`, {
                        method: "get"
                      }).then(response => {
                        if (response.ok) {
                          window.location.reload();

                        }
                        else {
                          swal.fire('failed')
                        }
                      })
                    }
                  });

                }
              </script>

</html>
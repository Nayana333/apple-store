        <section class="content-main" style="margin-left: 100px;">
            <form action="/admin/editBanner?_id=<%=banner._id %>" method="post" enctype="multipart/form-data">
                <div class="content-header">
                    <h2 class="content-title ms-7">Add New Banner</h2>
                </div>
                <div class="col-lg-3">
                    <div class="card mb-4" style="width: 647px;">
                        <div class="card-header">
                            <h4>Banner Image</h4>
                        </div>
                        <div class="card-body">
                            <div class="input-upload">
                                <img src="/public/bannerImages/<%= banner.image%>" style="width:200px" alt="hello">
                                <input type="file" name="image" id="image" class="form-control" accept="image/*">                            </div>
                        </div>
                    </div>
                </div>
            
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Basic</h4>
                            </div>
                            <div class="card-body">
                                <div class="mb-4">
                                    <label class="form-label">Select Banner Type</label>
                                    <select class="form-select" name="bannerType">
                                        <option value="category Banner">Category Offer</option>
                                        <option value="product Banner">Product Offer</option>
                                        <option value="new Arrival">New Arrival</option>
                                        <option value="Deals and Promotions">Deals and Promotions</option>
                                        <option value="Seasonal Sales">Seasonal Sales</option>
                                    </select>
                                </div>
                                <input type="text" name="id" value="<%= banner._id %>" style="display: none;"> 

                                <div class="mb-4">
                                    <label class="form-label">Title</label>
                                    <input type="text" value="<%=banner.title%>" class="form-control" name="title">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Link</label>
                                    <input type="text" value="<%=banner.link%>" class="form-control" name="link">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <input type="text" value="<%=banner.description%>" class="form-control" name="description">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Offer</label>
                                    <input type="text" value="<%=banner.offer%>" class="form-control" name="offer">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Subtitle</label>
                                    <input type="text" value="<%=banner.subtitle%>" class="form-control" name="subtitle">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="card mb-4" style="height: 583px;">
                            <div class="card-header">
                                <h4>Additional Details</h4>
                            </div>
                            <div<label class="form-label">Select Category</label>
                            <select class="form-select" name="category">
                                <% category.forEach(category => { %>
                                <option value="<%= category._id %>">
                                    <%= category.category %>
                                </option>
                                <% }) %>
                            </select><br>
                            
                            <label class="form-label">Select Product</label>
                            <select class="form-select" name="product">
                                <% product.forEach(product => { %>
                                <option value="<%= product._id %>">
                                    <%= product.name %>
                                </option>
                                <% }) %>
                            </select>
                            
                                <div class="mb-4">
                                    <label class="form-label">Start Date</label>
                                    <input type="text" value='<%=banner.startDate.toDateString()%>'class="form-control" name="startDate">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">End Date</label>
                                    <input type="text" value="<%=banner.endDate.toDateString()%>" class="form-control" name="endDate">
                                </div>
                                <input type="submit" class="btn btn-md rounded font-sm hover-up" value="Edit Banner">
                            </div>
                        </div>
                    </div>

        <section class="content-main">

            
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Offer List </h2>
                    
                </div>


                
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                       
                        <div class="col-lg-2 col-6 col-md-3">
                            
                        </div>
                        <div class="col-lg-2 col-6 col-md-3">
                           
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>
                                    <th scope="col">Type</th>
                                    <th scope="col">Discount Value</th>
                                    <th scope="col">Start Date</th>
                                    <th scope="col">End Date</th>
                                    <th scope="col">Product Name</th>
                                    <th scope="col">Status</th>
                                    <th scope="col" class="text-end">Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (offer.length > 0) {
                                    for (let i = 0; i < offer.length; i++) { %>
                                        <tr>
                                            <td><%= offer[i].name %></td>
                                            <td><b><%= offer[i].discountType %></b></td>
                                            <td><%= offer[i].discountValue %></td>
                                            <td><%= offer[i].startDate.toDateString() %></td>
                                            <td><%= offer[i].endDate.toDateString() %></td>
                                            <td><%= offer[i].discountedProduct.name %></td>
                                            <td>
                                                <% if (offer[i].isActive) { %>
                                                    <a href="/admin/unlistOffer?id=<%= offer[i]._id.toString() %>">
                                                     
                                                       <p class="text-danger ms-4">Inactive</p>
                                                     
                                                    </a>
                                                  <% } else { %>
                                                    <a href="/admin/unlistOffer?id=<%= offer[i]._id.toString() %>">
                                                      
                                                        <p class="text-primary ms-4">Active</p>
                                                     
                                                    </a>
                                                  <% } %>
                                   </td>
                                            <td><a href="/admin/loadEditOffer?id=<%= offer[i]._id.toString()%>" class="btn btn-xs">Edit</a></td>
                                            <td class="text-end">
                                            </td>

                                        </tr>
                                    <% }
                                } %>
                            </tbody>
                          </table>
                            <% if (totalPages > 1) { %>
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <% if (currentPage > 1) { %>
          <li class="page-item">
            <a class="page-link text-success" href="/admin/loadOfferList?page=<%= currentPage - 1 %>" aria-label="Previous">Previous</a>
          </li>
        <% } %>
  
        <% for (let page = 1; page <= totalPages; page++) { %>
          <li class="page-item <%= page === currentPage ? 'active' : '' %>">
            <a class="page-link text-success" href="/admin/loadOfferList?page=<%= page %>"><%= page %></a>
          </li>
        <% } %>
  
        <% if (currentPage < totalPages) { %>
          <li class="page-item">
            <a class="page-link text-success" href="/admin/loadOfferList?page=<%= currentPage + 1 %>" aria-label="Next">Next</a>
          </li>
        <% } %>
      </ul>
    </nav>
  <% } else { %>
    <table>
      <tr>
        <td colspan="5"></td>
      </tr>
    </table>
  <% } %>
                      

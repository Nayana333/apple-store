        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const form = document.getElementById('productForm');
                const nameInput = document.getElementById('name');
                const quantityInput = document.getElementById('quantity');
                const productColorInput = document.getElementById('productColor');
                const priceInput = document.getElementById('price');
                const categorySelect = document.getElementsByName('category')[0];
        
                function validateName() {
                    const nameValue = nameInput.value.trim();
                    if (nameValue === '') {
                        document.getElementById('nameError').textContent = 'Please enter a product title';
                        document.getElementById('nameError').style.color = 'red';
                        return false;
                    }
                    document.getElementById('nameError').textContent = '';
                    return true;
                }
        
                function validateQuantity() {
                    const quantityValue = quantityInput.value.trim();
                    const quantityError = document.getElementById('quantityError');
        
                    if (quantityValue === '') {
                        quantityError.textContent = 'Please enter a quantity';
                        quantityError.style.color = 'red';
                        return false;
                    }
        
                    if (!/^\d+$/.test(quantityValue)) {
                        quantityError.textContent = 'Quantity should only contain numbers';
                        quantityError.style.color = 'red';
                        return false;
                    }
        
                    quantityError.textContent = '';
                    return true;
                }
        
                function validateProductColor() {
                    const productColorValue = productColorInput.value.trim();
                    if (productColorValue === '') {
                        document.getElementById('productColorError').textContent = 'Please enter a product color';
                        document.getElementById('productColorError').style.color = 'red';
                        return false;
                    }
                    document.getElementById('productColorError').textContent = '';
                    return true;
                }
        
                function validatePrice() {
                    const priceValue = priceInput.value.trim();
                    const priceError = document.getElementById('priceError');
        
                    if (priceValue === '') {
                        priceError.textContent = 'Please enter a product price';
                        priceError.style.color = 'red';
                        return false;
                    }
        
                    if (isNaN(priceValue)) {
                        priceError.textContent = 'Price should be a number';
                        priceError.style.color = 'red';
                        return false;
                    }
        
                    priceError.textContent = '';
                    return true;
                }
        
                function validateCategory() {
                    const categoryValue = categorySelect.value.trim();
                    if (categoryValue === '') {
                        alert('Please select a category.');
                        return false;
                    }
                    return true;
                }
        
                function validateImages() {
                    const images = document.querySelectorAll('input[type="file"]');
                    let isAnyImageUploaded = false;
        
                    images.forEach(img => {
                        if (img.value.trim() !== '') {
                            isAnyImageUploaded = true;
                        }
                    });
        
                    if (!isAnyImageUploaded) {
                        alert('Please upload  image.');
                        return false;
                    }
        
                    return true;
                }
        
                function validateSpecifications() {
                    const specifications = document.querySelectorAll('.specification');
                    let isAnySpecificationFilled = false;
        
                    specifications.forEach(spec => {
                        if (spec.value.trim() !== '') {
                            isAnySpecificationFilled = true;
                        }
                    });
        
                    if (!isAnySpecificationFilled) {
                        alert('Please fill at least one specification.');
                        return false;
                    }
        
                    return true;
                }
        
                function isFormValid() {
                    const nameValid = validateName();
                    const quantityValid = validateQuantity();
                    const productColorValid = validateProductColor();
                    const priceValid = validatePrice();
                    const categoryValid = validateCategory();
                    const imagesValid = validateImages();
                    const specificationsValid = validateSpecifications();
        
                    return nameValid && quantityValid && productColorValid && priceValid &&
                        categoryValid && imagesValid && specificationsValid;
                }
        
                nameInput.addEventListener('input', validateName);
                quantityInput.addEventListener('input', validateQuantity);
                productColorInput.addEventListener('input', validateProductColor);
                priceInput.addEventListener('input', validatePrice);
        
                form.addEventListener('submit', function (event) {
                    if (!isFormValid()) {
                        event.preventDefault();
                        alert('Please fill in all required fields.');
                    }
                });
            });
        </script>
        

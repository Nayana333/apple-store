    <Script>
    document.addEventListener('DOMContentLoaded', function () {
        const form = document.getElementById('productForm');
        const nameInput = document.getElementById('name');
        const quantityInput = document.getElementById('quantity');
        const productColorInput = document.getElementById('productColor');
        const priceInput = document.getElementById('price');
        const categorySelect = document.getElementById('categorySelect');
    
        function validateName() {
            const nameValue = nameInput.value.trim();
            if (nameValue === '') {
                document.getElementById('nameError').textContent = 'Please enter a product title';
                document.getElementById('nameError').style.color = 'red';
                return false;
            }
            document.getElementById('nameError').textContent = '';
            return true;
        }
    
        function validateQuantity() {
            const quantityValue = quantityInput.value.trim();
            if (quantityValue === '') {
                document.getElementById('quantityError').textContent = 'Please enter a quantity';
                document.getElementById('quantityError').style.color = 'red';
                return false;
            }
            document.getElementById('quantityError').textContent = '';
            return true;
        }
    
        function validateProductColor() {
            const productColorValue = productColorInput.value.trim();
            if (productColorValue === '') {
                document.getElementById('productColorError').textContent = 'Please enter a product color';
                document.getElementById('productColorError').style.color = 'red';
                return false;
            }
            document.getElementById('productColorError').textContent = '';
            return true;
        }
    
        function validatePrice() {
            const priceValue = priceInput.value.trim();
            if (priceValue === '') {
                document.getElementById('priceError').textContent = 'Please enter a product price';
                document.getElementById('priceError').style.color = 'red';
                return false;
            }
            document.getElementById('priceError').textContent = '';
            return true;
        }
    
        function isFormValid() {
            const nameValid = validateName();
            const quantityValid = validateQuantity();
            const productColorValid = validateProductColor();
            const priceValid = validatePrice();
    
            return nameValid && quantityValid && productColorValid && priceValid;
        }
    
        nameInput.addEventListener('input', function () {
            if (validateName()) {
                document.getElementById('nameError').textContent = '';
            }
        });
    
        quantityInput.addEventListener('input', function () {
            if (validateQuantity()) {
                document.getElementById('quantityError').textContent = '';
            }
        });
    
        productColorInput.addEventListener('input', function () {
            if (validateProductColor()) {
                document.getElementById('productColorError').textContent = '';
            }
        });
    
        priceInput.addEventListener('input', function () {
            if (validatePrice()) {
                document.getElementById('priceError').textContent = '';
            }
        });
    
        form.addEventListener('submit', function (event) {
            if (!isFormValid()) {
                event.preventDefault();
                alert('Please fill in all required fields.');
            } else if (nameInput.value.trim() === '' && quantityInput.value.trim() === '' && productColorInput.value.trim() === '' && priceInput.value.trim() === '') {
                event.preventDefault();
                alert('Form cannot be empty.');
            }
        });
    });
    
    
</Script>
    

        

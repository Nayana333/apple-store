    <script>
        document.getElementById('bannerForm').addEventListener('submit', function(event) {
            event.preventDefault(); 
    
            const title = document.querySelector('input[name="title"]');
            const link = document.querySelector('input[name="link"]');
            const description = document.querySelector('input[name="description"]');
            const offer = document.querySelector('input[name="offer"]');
            const subtitle = document.querySelector('input[name="subtitle"]');
            const startDate = document.querySelector('input[name="startDate"]');
            const endDate = document.querySelector('input[name="endDate"]');
    
            const errorTitle = document.getElementById('errorTitle');
            const errorLink = document.getElementById('errorLink');
            const errorDescription = document.getElementById('errorDescription');
            const errorOffer = document.getElementById('errorOffer');
            const errorSubtitle = document.getElementById('errorSubtitle');
            const errorStartDate = document.getElementById('errorStartDate');
            const errorEndDate = document.getElementById('errorEndDate');
    
            errorTitle.textContent = '';
            errorLink.textContent = '';
            errorDescription.textContent = '';
            errorOffer.textContent = '';
            errorSubtitle.textContent = '';
            errorStartDate.textContent = '';
            errorEndDate.textContent = '';
    
            if (title.value.trim() === '') {
                errorTitle.textContent = 'Please enter a title';
                return;
            }
    
            if (link.value.trim() === '') {
                errorLink.textContent = 'Please enter a link';
                return;
            }
    
            if (description.value.trim() === '') {
                errorDescription.textContent = 'Please enter a description';
                return;
            }
    
            if (offer.value.trim() === '') {
                errorOffer.textContent = 'Please enter an offer';
                return;
            }
    
            if (subtitle.value.trim() === '') {
                errorSubtitle.textContent = 'Please enter a subtitle';
                return;
            }
    
            const today = new Date().toISOString().split('T')[0];
    
            if (startDate.value.trim() === '') {
                errorStartDate.textContent = 'Please select a start date';
                return;
            }
    
            if (startDate.value < today) {
                errorStartDate.textContent = 'Start date must be today or later';
                return;
            }
    
            if (endDate.value.trim() === '') {
                errorEndDate.textContent = 'Please select an end date';
                return;
            }
    
            if (endDate.value < startDate.value) {
                errorEndDate.textContent = 'End date must be after the start date';
                return;
            }
    
            this.submit();
        });
    </script>

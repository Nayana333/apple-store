<script>
    document.addEventListener("DOMContentLoaded", function () {
        var form = document.getElementById("bannerForm");
        form.addEventListener("submit", function (event) {
            var valid = true;

            resetErrors();

            var imageInput = document.getElementById("image");
            if (imageInput.files.length === 0) {
                valid = false;
                displayError("image-error", "Please select a banner image.");
            }

            var bannerTypeSelect = document.getElementsByName("bannerType")[0];
            if (bannerTypeSelect.value === "") {
                valid = false;
                displayError("banner-error", "Please select a banner type.");
            }

            var fieldsToValidate = ["title", "link", "description", "offer", "subtitle"];
            fieldsToValidate.forEach(function (fieldName) {
                var fieldValue = form.elements[fieldName].value.trim();
                if (fieldValue === "") {
                    valid = false;
                    displayError(fieldName + "-error", "Please fill in the " + fieldName + " field.");
                }
            });

            var additionalDetailsFields = ["category", "product", "startDate", "endDate"];
            additionalDetailsFields.forEach(function (fieldName) {
                var fieldValue = form.elements[fieldName].value;
                if (fieldValue === "") {
                    valid = false;
                    displayError(fieldName + "-error", "Please fill in the " + fieldName + " field.");
                }
            });

            if (!valid) {
                event.preventDefault();
            }
        });

        function resetErrors() {
            var errorElements = document.querySelectorAll("[id$='-error']");
            errorElements.forEach(function (errorElement) {
                errorElement.textContent = "";
            });
        }

        function displayError(elementId, errorMessage) {
            var errorElement = document.getElementById(elementId);
            if (errorElement) {
                errorElement.textContent = errorMessage;
            }
        }
    });
</script>




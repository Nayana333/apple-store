    <%- include("../partials/aside")%>
    <main class="main-wrap">
        <%- include("../partials/header2")%>z
       
        <section class="content-main" >
            <form method="POST" action="/admin/loadAddOffer">
                <div class="content-header">
                    <h2 class="content-title ms-7">Add New Offer</h2>
                </div>
                
            
                <div class="row" >
                    <div class="col-lg-6" style="width:552px">
                        <div class="card mb-4">
                            <div class="card-header">
                                <h4>Details</h4>
                            </div>
                            <div class="card-body" >
                              
                                <div class="mb-4">
                                    <label class="form-label">Name</label>
                                    <input type="text" placeholder="" class="form-control" name="name">
                                </div>
                               
                            <label class="form-label" for="discountType">Discount Type:</label>
                                        <select class="form-select" id="discountType" name="discountType" required>
                                            <option value="percentage">Percentage</option>
                                            <option value="fixed Amount">Fixed Amount</option>
                                        </select><br>
                                <div class="mb-4">
                                    <label class="form-label">Discount Value</label> 
                                    <input type="number" placeholder="" class="form-control" name="discountValue">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Max Redeemable Amount:</label>
                                    <input type="number" placeholder="" class="form-control" name="maxRedeemableAmt">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">start Date</label>
                                    <input type="date" placeholder="" class="form-control" name="startDate">
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">End Date</label>
                                    <input type="date" placeholder="" class="form-control" name="endDate">
                                </div>
                                <label class="form-label">Select Product</label>
                                <select class="form-select" name="discountedProduct">
                                    <% product.forEach(product => { %>
                                    <option value="<%= product._id %>">
                                        <%= product.name %>
                                    </option>
                                    <% }) %>
                                </select><br>
                                <input type="submit" class="btn btn-md rounded font-sm hover-up" value="Create Offer">
                            </div>
                        </div>
                    </div>
                    
                </div>
            </form>
            
            
            

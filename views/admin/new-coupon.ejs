    <script>
        document.getElementById('couponForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent the form from submitting initially
                    
            // Validation for coupon form fields
            const couponCode = document.getElementById('couponCode');
            const discount = document.getElementById('discount');
            const limit = document.getElementById('limit');
            const minCartAmt = document.getElementById('minCartAmt');
            const maxRedeemableAmt = document.getElementById('maxRedeemableAmt');
            const expiryDate = document.getElementById('expiryDate');
            const discountType = document.querySelector('input[name="discountType"]:checked');
            
            clearErrors();
        
            let isValid = true;
        
            if (couponCode.value.trim() === '') {
                showError(couponCode, 'Please enter a coupon code');
                isValid = false;
            } else {
                clearError(couponCode);
            }
        
            if (discount.value.trim() === '' || isNaN(discount.value) || +discount.value < 0) {
                showError(discount, 'Please enter a valid discount');
                isValid = false;
            } else {
                clearError(discount);
            }
        
            if (limit.value.trim() === '' || isNaN(limit.value) || +limit.value < 0) {
                showError(limit, 'Please enter a valid limit');
                isValid = false;
            } else {
                clearError(limit);
            }
        
            if (minCartAmt.value.trim() === '' || isNaN(minCartAmt.value) || +minCartAmt.value < 0) {
                showError(minCartAmt, 'Please enter a valid minimum cart amount');
                isValid = false;
            } else {
                clearError(minCartAmt);
            }
        
            if (maxRedeemableAmt.value.trim() === '' || isNaN(maxRedeemableAmt.value) || +maxRedeemableAmt.value < 0) {
                showError(maxRedeemableAmt, 'Please enter a valid Max Redeemable Amount');
                isValid = false;
            } else {
                clearError(maxRedeemableAmt);
            }
        
            if (expiryDate.value.trim() === '') {
                showError(expiryDate, 'Please select an expiry date');
                isValid = false;
            } else {
                clearError(expiryDate);
            }
        
            if (discountType && discountType.value === 'percentage') {
                const discountValue = +discount.value;
                if (discountValue < 1 || discountValue > 100) {
                    showError(discount, 'Discount should be between 1 and 100 for percentage type');
                    isValid = false;
                } else {
                    clearError(discount);
                }
            }
            
            if (isValid) {
                this.submit();
            }
        });
        
        function showError(input, message) {
            const errorDiv = document.getElementById(input.id).nextElementSibling;
            errorDiv.innerText = message;
            errorDiv.style.color = 'red';
        }
        
        function clearError(input) {
            const errorDiv = document.getElementById(input.id).nextElementSibling;
            errorDiv.innerText = '';
        }
        
        function clearErrors() {
            const errorFields = document.querySelectorAll('.error');
            errorFields.forEach(function(errorField) {
                errorField.innerText = '';
            });
        }
    
        const formInputs = document.querySelectorAll('input[type="text"], input[type="number"], input[type="date"]');
        formInputs.forEach(input => {
            input.addEventListener('input', function() {
                clearError(this);
            });
        });
    
        const discountTypeInputs = document.querySelectorAll('input[name="discountType"]');
        discountTypeInputs.forEach(input => {
            input.addEventListener('change', function() {
                const discountInput = document.getElementById('discount');
                if (this.value === 'percentage') {
                    const discountValue = +discountInput.value;
                    if (discountValue < 1 || discountValue > 100) {
                        showError(discountInput, 'Discount should be between 1 and 100 for percentage type');
                    } else {
                        clearError(discountInput);
                    }
                } else {
                    clearError(discountInput);
                }
            });
        });
    </script>
    

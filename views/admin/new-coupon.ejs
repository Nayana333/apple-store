    <script>
        document.getElementById('couponForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent the form from submitting initially
            
            // Validation for coupon form fields
            const couponCode = document.querySelector('input[name="couponCode"]');
            const discount = document.querySelector('input[name="discount"]');
            const limit = document.querySelector('input[name="limit"]');
            const minCartAmt = document.querySelector('input[name="minCartAmt"]');
            const maxRedeemableAmt = document.querySelector('input[name="maxRedeemableAmt"]');
            const expiryDate = document.querySelector('input[name="expiryDate"]');
            
           
    
            
            clearErrors();
    
            // Perform validation checks
            let isValid = true;
    
            if (couponCode.value.trim() === '') {
                showError(couponCode, 'Please enter a coupon code');
                isValid = false;
            }

            if (discount.value.trim() === '') {
                showError(discount, 'Please enter a discount');
                isValid = false;
            }
            if (limit.value.trim() === '') {
                showError(limit, 'Please enter the Limit');
                isValid = false;
            }

            if (minCartAmt.value.trim() === '') {
                showError(minCartAmt, 'Please enter the minimum cart amount');
                isValid = false;
            }
            if (maxRedeemableAmt.value.trim() === '') {
                showError(maxRedeemableAmt, 'Please enter Max Redeemable Amount');
                isValid = false;
            }


    
            if (expiryDate.value.trim() === '') {
                showError(expiryDate, 'Please select an expiry date');
                isValid = false;
            }
    
            
            
    
            // If all validations pass, submit the form
            if (isValid) {
                this.submit();
            }
        });
    
        function showError(input, message) {
            const errorDiv = input.nextElementSibling;
            errorDiv.innerText = message;
            errorDiv.style.color = 'red';
        }
    
        function clearErrors() {
            const errorFields = document.querySelectorAll('.error');
            errorFields.forEach(function(errorField) {
                errorField.innerText = '';
            });
        }
    </script>

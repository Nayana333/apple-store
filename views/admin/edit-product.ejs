        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const form = document.getElementById('editProductForm');

                form.addEventListener('submit', function (event) {
                    const price = document.getElementById('price');
                    const discountPrice = document.getElementById('discountPrice');
                    const quantity = document.getElementById('quantity');
                    const battery = document.getElementById('battery');
                    const productColor = document.getElementById('productColor');

                    validateNumericInput(event, price);
                    validateNumericInput(event, quantity);
                    validateNumericInput(event, battery);
                    validateDiscountPrice(event, discountPrice);
                    validateProductColor(event, productColor);
                });

                function validateNumericInput(event, inputField) {
                    if (!/^\d+$/.test(inputField.value)) {
                        event.preventDefault();
                        showError(inputField, 'Accept only numbers');
                    } else {
                        removeError(inputField);
                    }
                }

                function validateDiscountPrice(event, inputField) {
                    if (inputField.value !== 'null' && !/^\d+$/.test(inputField.value)) {
                        event.preventDefault();
                        showError(inputField, 'Accept only numbers');
                    } else if (parseInt(inputField.value) < 0) {
                        event.preventDefault();
                        showError(inputField, 'Discount value cannot be negative');
                    } else {
                        removeError(inputField);
                    }
                }

                function validateProductColor(event, inputField) {
                    if (!/^[a-zA-Z]+$/.test(inputField.value)) {
                        event.preventDefault();
                        showError(inputField, 'Accept letters only');
                    } else {
                        removeError(inputField);
                    }
                }

                function showError(input, message) {
                    const errorDiv = input.nextElementSibling;
                    errorDiv.textContent = message;
                    errorDiv.style.color = 'red';
                }

                function removeError(input) {
                    const errorDiv = input.nextElementSibling;
                    errorDiv.textContent = '';
                }


                form.querySelectorAll('input').forEach(input => {
                    input.addEventListener('input', function () {
                        removeError(this);
                    });
                });
            });
        </script>


